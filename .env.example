# SAMS Environment Configuration
# Copy to .env and fill real values before starting the app

# Database (PostgreSQL)
# Recommended format for libs that accept a single URL:
# postgres://user:password@host:port/dbname
DATABASE_URL=postgres://sams_app:password@localhost:5432/sams

# JWT Authentication
JWT_SECRET=replace_with_a_strong_random_string
ACCESS_TOKEN_EXPIRES_MINUTES=15
REFRESH_TOKEN_EXPIRES_DAYS=7

# Optional services
# REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info
